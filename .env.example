# Database Configuration
DATABASE_URL=postgresql://handywriterz:password@localhost:5432/handywriterz
REDIS_URL=redis://localhost:6379

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# File Storage (Cloudflare R2)
R2_BUCKET_NAME=handywriterz-documents
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-custom-domain.com

# Authentication & Payments (Dynamic.xyz)
DYNAMIC_ENV_ID=your_dynamic_environment_id
DYNAMIC_PUBLIC_KEY=your_dynamic_public_key
DYNAMIC_PRIVATE_KEY=your_dynamic_private_key
DYNAMIC_WEBHOOK_SECRET=your_dynamic_webhook_secret

# External Service Integrations
TURNITIN_API_KEY=your_turnitin_api_key
TURNITIN_WEBHOOK_URL=https://your-domain.com/api/webhook/turnitin
TURNITIN_TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TURNITIN_TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@handywriterz.com

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_TUTOR_REVIEW=true
ENABLE_SUBSCRIPTION_BILLING=true
ENABLE_ANALYTICS=false

# Analytics & Monitoring (Optional)
HONEYCOMB_API_KEY=your_honeycomb_api_key
SENTRY_DSN=your_sentry_dsn
POSTHOG_KEY=your_posthog_key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Pricing Configuration
PRICE_PER_PAGE_GBP=12
WORDS_PER_PAGE=275
SUBSCRIPTION_MONTHLY_GBP=20
TRIAL_WORD_LIMIT=1000

# Development & Testing
NODE_ENV=development
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=true